<!-- Page for selecting test to edit -->

<div class="container">
    <div class="col-md-10 col-md-offset-1">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="title">Redigera Test!</h1>
            </div>
        </div>
        <hr>
        <!-- Test selection -->
        <form action="" method="get">
            <select name="test" id="testSelect" class="form-control">
                {{#each tests}}
                    <option class="{{this.TestId}}">{{this.TTitle}}</option>
                {{/each}}
            </select>
            <br>
            <button type="button" class="btn btn-primary btn-block" id="editButton" value="hh">Redigera test</button>
        </form>
    </div>
</div>

<script>
    //Sends user to a new page for editing the test
    $(document).on('click', '#editButton', function() {
        console.log($('select option:selected').attr('class'));
        var currTestId = $('select option:selected').attr('class');
        location.replace('/edit=' + currTestId);
    });
</script>