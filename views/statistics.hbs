<!-- Page showing statistics for selected test -->

<div class="container" id="statistics">
    <div class="col-lg-8">
        <div class="panel panel-default">
              <div class="panel-heading">
                    <h1 class="panel-title">Statistik</h1>
              </div>
              <div class="panel-body">

                  <!-- Test selection -->
                  <p>Välj ett test nedan för att se hittils samlad statistik.</p>
                  <select name="test" id="testSelect" class="form-control">
                      <option value="">Välj test</option>
                      <option value="" id="genTest1">Generic test 1</option>
                      <option value="" id="genTest2">Generic test 2</option>
                  </select>

                  <!-- Displaying statistics -->
                  <table class="table collapse" id="statsTable">
                      <br><br>
                      <tr>
                          <th>Genomförda test <span class="label label-success">Totalt antal</span></th>
                          <td>10</td>
                      </tr>
                      <tr>
                          <th>Godkända resultat <span class="label label-success">Totalt antal</span></th>
                          <td>8</td>
                      </tr>
                      <tr>
                          <th>Poäng <span class="label label-primary">Medelvärde</span></th>
                          <td>15.50 / 20</td>
                      </tr>
                      <tr>
                          <th>Tidåtgång <span class="label label-primary">Medelvärde</span></th>
                          <td>26 minuter</td>
                      </tr>
                  </table>
              </div>
        </div>
    </div>
</div>

<script>
    // Displays statistics for selected test when clicking button
    $(function() {
        $("#testSelect").change(function() {
            if ($("#genTest1").is(":selected")) {
                $("#statsTable").hide();
                $("#statsTable").slideDown();
            } else if($("#genTest2").is(":selected")){
                $("#statsTable").hide();
                $("#statsTable").slideDown();
            } else {
                $("#statsTable").hide();
            }
        });
    });
</script>