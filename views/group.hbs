<div class="container" id="test">
    <div class="col-lg-8 col-lg-offset-2">

        <div class="panel panel-default notthis">
            <div class="panel-heading">
                <h1 class="panel-title">Skapa grupp!</h1>
            </div>
            <div class="panel-body">
                <form>

                    <label class="control-label">Namn p√• grupp:</label>
                    <input type="text" class="form-control" placeholder="Testnamn" id="testName">

                    <div class="col-lg-6">
                        <h2>Elever:</h2>
                        <!-- Display list of students in the database. -->
                        <ul class="list-group" id="list" style="min-height:100px "></ul>
                    </div>
                    <div class="col-lg-6">
                        <h2>Tillagda elever:</h2>
                        <!-- contains students of the group that the user creates-->
                    <ul class="list-group" id="groupList" style="min-height:100px ">

                    </ul>
                    </div>
                    <button id="createGroup" type="submit" class="btn btn-default" data-toggle="modal" data-target="#questionModal" >Skapa grupp</button>
