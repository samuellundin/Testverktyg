            </div>
        </div>


    </div>
</div>

<script src="js/saveGroup.js"></script>
<script>
    var studentList = $('#list');

    //Loops trough students in the database and display it in a list in the browser.
        {{#each elever}}
       studentList.append('<li class="list-group-item" id = {{this.UserId}}>  {{this.FirstName}} {{this.LastName}} - {{this.Mail}}</li>');

    {{/each}}
    $('#list,#groupList').sortable({connectWith:'#list,#groupList'});//Makes it possible to move students between lists.

</script>