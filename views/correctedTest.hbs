<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div><h1><span class="label label-default">{{testResult.test.TTitle}}</span></h1><p>Inlämnat: {{testResult.test.ATDate}}</p></div>
                </div>
                <div class="panel-body">
                    <div class="col-xs-4">
                        <div class="row"><h2 class="title"><span class="label label-default">Namn:</span></h2></div>
                        <h4 class="title"> {{testResult.test.FirstName}} {{testResult.test.LastName}}</h4>
                    </div>
                    <div class="col-xs-4">
                        <div class="row"><h2 class="title"><span class="label label-default">Poäng:</span></h2></div>
                        <h4 class="title"> {{testResult.test.ATPoints}}/{{testResult.test.TMaxPoints}}</h4>
                    </div>
                    <div class="col-xs-4">
                        <div class="row"><h2 class="title"><span class="label label-default">Betyg:</span></h2></div>
                        <h4 class="title"> {{testResult.test.ATGrade}}</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-10 col-lg-offset-1">
{{#testResult.test.questions}}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">{{Question}}<p class="pull-right">{{this.answeredQuestion.AQPoints}}/{{this.QPoints}}</p></h3>
        </div>
        <div class="panel-body">
            <div class="col-xs-6">
                <h4 class="title">Svar:</h4>
                <ul class="list-group useranswers">
                    {{#this.userAnswers}}
                        <li class="list-group-item">{{AText}}{{UAText}}</li>
                    {{/this.userAnswers}}
                </ul>
            </div>
            <div class="col-xs-6">
                <h4 class="title" name="{{this.QType}}">Rätt svar:</h4>
                <ul class="list-group answers">
                    {{#this.answers}}
                        <li class="list-group-item">{{AText}}</li>
                    {{/this.answers}}
                </ul>
            </div>
        </div>
    {{#if this.comment}}
            <div class="panel-footer">
                <div class="panel-title">Kommentar: </div>
                {{this.comment.QuestionComment}}
            </div>
    {{/if}}
    </div>
{{/testResult.test.questions}}
</div>
{{#if testResult.test.testComment}}
    <div class="col-lg-10 col-lg-offset-1">
    <div class="panel panel-default">
        <div class="panel-heading">
        <h3 class="panel-title">Lärarens kommentar</h3>
    </div>
    <div class="panel-body">
        {{testResult.test.testComment.TestComment}}
    </div>
    </div>
    </div>
{{/if}}
</div>
<style>.label{padding:6px;}</style>
<script>$('h4[name="Öppen fråga"]').parent().remove()</script>