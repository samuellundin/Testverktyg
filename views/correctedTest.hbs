<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <div class="row"><h1 class="title">Testresultat:</h1></div>
            <div class="row"><h2 class="title">{{testResult.test.FirstName}} {{testResult.test.LastName}}</h2></div>
            <div class="row"><h3 class="title">{{testResult.test.ATDate}}</h3></div>
        </div>
        <div class="col-xs-6">
            <div class="row"><h1 class="title">{{testResult.test.TTitle}}</h1></div>
            <div class="row"><h2 class="title">Poäng: {{testResult.test.ATPoints}}/{{testResult.test.TMaxPoints}}</h2></div>
            <div class="row"><h3 class="title">Betyg: {{testResult.test.ATGrade}}</h3></div>
        </div>
    </div>
    <hr>
    <div class="col-lg-10 col-lg-offset-1">
{{#testResult.test.questions}}
        <div class="panel panel-default">
            <div class="panel-heading">
            <h3 class="panel-title">{{Question}}<p class="pull-right">{{this.answeredQuestion.AQPoints}}/{{this.QPoints}}</p></h3>
        </div>
        <div class="panel-body">
            <div class="col-xs-6">
                <h4 class="title">Svar:</h4>
                <ul class="list-group useranswers">
                    {{#this.userAnswers}}
                        <li class="list-group-item">{{AText}}{{UAText}}</li>
                    {{/this.userAnswers}}
                </ul>
            </div>
            <div class="col-xs-6">
                <h4 class="title" name="{{this.QType}}">Rätt svar:</h4>
                <ul class="list-group answers">
                    {{#this.answers}}
                        <li class="list-group-item">{{AText}}</li>
                    {{/this.answers}}
                </ul>
            </div>
        </div>
    {{#if this.comment}}
            <div class="panel-footer">
                <div class="panel-title">Kommentar: </div>
                {{this.comment.QuestionComment}}
            </div>
    {{/if}}
    </div>
{{/testResult.test.questions}}
</div>
{{#if testResult.test.testComment}}
    <div class="col-lg-10 col-lg-offset-1">
    <div class="panel panel-default">
        <div class="panel-heading">
        <h3 class="panel-title">Lärarens kommentar</h3>
    </div>
    <div class="panel-body">
        {{testResult.test.testComment.TestComment}}
    </div>
    </div>
    </div>
{{/if}}
</div>
<script>$('h4[name="Öppen fråga"]').parent().remove()</script>